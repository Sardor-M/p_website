{
    "type": "module",
    "name": "personal-website-monorepo",
    "private": true,
    "scripts": {
        "dev": "pnpm --filter web dev",
        "build": "pnpm build:functions && pnpm build:web",
        "build:web": "pnpm --filter web build",
        "build:functions": "pnpm --filter functions build",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "type-check": "pnpm --filter web type-check && pnpm --filter functions type-check",
        "prepare": "husky install",
        "deploy:functions": "pnpm lint && pnpm --filter functions build && firebase deploy --only functions",
        "deploy:only-functions": "pnpm --filter functions lint && pnpm --filter functions build && firebase deploy --only functions",
        "test": "echo \"No tests yet\" && exit 0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-react-hooks": "^5.1.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.2",
        "typescript": "^5.7.3"
    },
    "lint-staged": {
        "apps/web/src/**/*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
